<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433</property>
        <property name="show_sql">true</property>

        <!-- C3p0 -->
        <property name="hibernate.c3p0.acquire_increment">1</property>
        <property name="hibernate.c3p0.idle_test_period">300</property>
        <property name="hibernate.c3p0.timeout">600</property>
        <property name="hibernate.c3p0.max_size">25</property>
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.c3p0.max_statement">0</property>
        <property name="hibernate.c3p0.preferredTestQuery">select 1;</property>
        <mapping class="application.model.Facturas"/>
        <mapping class="application.model.AlumnosEntity"/>
        <mapping class="application.model.MateriaEntity"/>
        <mapping class="application.model.ProfesoresEntity"/>
        <mapping class="application.model.Alumnos"/>
        <mapping class="application.model.Materia"/>
        <mapping class="application.model.Profesores"/>

        <!-- Si el modelo cambia, descomentar la linea siguiente. -->
        <!--<property name="hbm2ddl.auto">update</property>-->

    </session-factory>
</hibernate-configuration>